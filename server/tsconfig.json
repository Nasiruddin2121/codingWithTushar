{
    "compilerOptions": {
      "rootDirs": ["src" ,"custom-types.d.ts"],
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"]
    },
    "include": ["src"]
  }